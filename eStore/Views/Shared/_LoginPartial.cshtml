<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated || Context.Session.GetString("admin") != null)
    {
        @if (User.IsInRole("Customer"))
        {
            <li class="nav-item">
                <partial name="_CartPartial" />
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Orders" asp-action="History">Order History</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link" href="#" title="Manage">
                @User.Identity.Name
                @Context.Session.GetString("admin")
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" method="post" asp-action="Logout" asp-controller="Authentication" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Register" asp-controller="Authentication">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Login" asp-controller="Authentication">
                Login
            </a>
        </li>
    }
</ul>